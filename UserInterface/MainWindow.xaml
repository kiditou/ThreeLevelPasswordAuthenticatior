<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Name="LoginWindow"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        x:Class="UserInterface.MainWindow"
        mc:Ignorable="d"
        Title="Login" Height="428" Width="326" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True" WindowStyle="None" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Storyboard x:Key="passwordNextButton_OnClick">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="sliderGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="5">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-325">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="sliderGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="passwordGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="passphraseGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="passphraseBackButton_OnClick">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="sliderGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="-325">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="5">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="sliderGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="passwordGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="passphraseGrid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CubicEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Grid x:Name="sliderGrid" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="1480" Margin="-320,0,-865,0" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid x:Name="usernameGrid" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="320" Background="#FFFAFAFA">
                <Button x:Name="usernameNextButton" Content="NEXT" Height="40" Margin="0,0,0,21" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="80" />
                <TextBox
        			x:Name="usernameTextBox"
        			materialDesign:HintAssist.Hint="Username"
        			Height="40" Margin="80,0,80,120" VerticalAlignment="Bottom"
        			HorizontalAlignment="Center" Width="160"
        			Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </Grid>

            <Grid x:Name="passwordGrid" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="320" Background="#FFFAFAFA" Margin="320,0,0,0">
                <Button x:Name="passwordNextButton" Content="NEXT" Height="40" Margin="0,0,20,20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" />

                <Button x:Name="passwordBackButton" Content="Back" Height="40" Margin="135,0,105,20"
        			VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignFlatButton}"
        			Background="#00424242" Foreground="#FF424242" />
                <PasswordBox
        			x:Name="passwordPasswordBox"
        			materialDesign:HintAssist.Hint="Password"
        			Height="40" Margin="80,0,80,120" VerticalAlignment="Bottom"
        			HorizontalAlignment="Center" Width="160"
        			Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            </Grid>
            <Grid x:Name="passphraseGrid" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="320" Background="#FFFAFAFA" Margin="640,0,0,0">
                <Button x:Name="passphraseNextButton" Content="NEXT" Height="40" Margin="0,0,20,20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" />

                <Button x:Name="passphraseBackButton" Content="Back" Height="40" Margin="135,0,105,20"
            		VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignFlatButton}"
            		Background="#00424242" Foreground="#FF424242" />
                <PasswordBox
                	x:Name="passphrasePasswordBox"
                	materialDesign:HintAssist.Hint="Passphrase"
                	Height="40" Margin="80,0,80,120" VerticalAlignment="Bottom"
                	HorizontalAlignment="Center" Width="160"
                	Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            </Grid>
        </Grid>
        <Grid Margin="40,60,20,160">
            <Ellipse Fill="#FFF4F4F5" Margin="45.802,0,45.802,55" Stroke="Black" HorizontalAlignment="Center" Width="125" VerticalAlignment="Top" Height="125" />

            <TextBlock x:Name="passwordNameTextBlock" Margin="0,140,0,0" TextWrapping="Wrap" Text="Ron Michael Dela Cruz" VerticalAlignment="Top" Height="40" HorizontalAlignment="Center" FontSize="21.333" FontFamily="Roboto" TextAlignment="Center" FontWeight="Bold" d:LayoutOverrides="LeftMargin, RightMargin"/>
        </Grid>
    </Grid>
</Window>